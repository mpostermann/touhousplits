<Window x:Class="TouhouSplits.UI.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TouhouSplits.UI"
        mc:Ignorable="d"
        Title="Touhou Splits" SizeToContent="Height" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_Open Splits..."/>
                <MenuItem Header="_Save Splits As..."/>
                <MenuItem Header="_Close"/>
            </MenuItem>
            <MenuItem Header="_Game">
                <MenuItem Header="_Hook Game"/>
                <MenuItem Header="Start _Recording Split"/>
            </MenuItem>
        </Menu>
        <StackPanel Grid.Row="1">
            <Label>Game Title</Label>
            <Label>Splits Title</Label>
            <ListView >
                <ListView.View>
                    <GridView AllowsColumnReorder="True">
                        <GridViewColumn>
                            <GridViewColumnHeader>Segment</GridViewColumnHeader>
                        </GridViewColumn>
                        <GridViewColumn>
                            <GridViewColumnHeader>Score</GridViewColumnHeader>
                        </GridViewColumn>
                        <GridViewColumn>
                            <GridViewColumnHeader>PB</GridViewColumnHeader>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
            <Label>Current Score</Label>
        </StackPanel>
    </Grid>
</Window>
